generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Sale {
  id            Int           @id @default(autoincrement())
  folio         String?
  total         Float
  status        String?
  //Sucursal
  branch        String?  @default("Sucursal Defult") 
  //Caja de cobro
  cashRegister  String?   @default("Caja 1") 
  paymentMethod String?
  createdAt     DateTime      @default(now())
  clientName    String?
  syncStatus    String        @default("pendiente")
  details       SaleDetail[]
}

model SaleDetail {
  id          Int      @id @default(autoincrement())
  quantity    Int
  price       Float
  subTotal    Float
  productName String?
  createdAt   DateTime @default(now())
  saleId      Int
  sale        Sale     @relation(fields: [saleId], references: [id])
}

